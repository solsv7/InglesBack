Content-Type: application/json

{
  "notas": [
    {
      "idAlumno": 2,
      "idPeriodo": 1,
      "idTipoNota": 1,
      "nota": 8,
      "cicloLectivo": 2025
    },
    {
      "idAlumno": 2,
      "idPeriodo": 1,

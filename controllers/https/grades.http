###  Subir notas con comentario incluido
POST {{host}}/api/grades/subir
Content-Type: application/json

{
  "notas": [
    {
      "idAlumno": 2,
      "idPeriodo": 1,
      "idTipoNota": 3,
      "nota": 10,
      "cicloLectivo": 2025,
      "comentario": "Excelente desempeño y participación."
    },
    {
      "idAlumno": 2,
      "idPeriodo": 1,
      "idTipoNota": 4,
      "nota": 9,
      "cicloLectivo": 2025,
      "comentario": "Debe reforzar un poco más el writing."
    }
  ]
}

